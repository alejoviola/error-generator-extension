{
  "manifest_version": 2,
  "name": "Error Generator for Datadog",
  "version": "1.0.0",
  "description": "Generates errors for Datadog RUM monitoring",
  "permissions": ["activeTab"],
  "browser_action": {
    "default_popup": "popup.html",
    "default_title": "Error Generator"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "browser_specific_settings": {
    "gecko": {
      "id": "error-generator@datadog.com"
    }
  }
}
